<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 align="center">Saved Formations</h1>

  <div class="media">
    <div class="media-body">
      <table class="table table-hover sortable">
        <thead id="formations-thead">
          <tr>
            <th>Title</th>
            <th></th>
          </tr>   
        </thead>
        <tbody>
        <div id="container_saved_formations">
          <%= render @saved_formations %>
        </div>
        </tbody>
      </table>
    </div>
  </div>         

  <br>

  <div class="row">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-custom1 btn-block" data-toggle="modal" data-target="#mynewsaved_formation">
        Add a New Formation
      </button>
  </div>
<br>
<br>

  <!-- Modal  create action -->
    <%= form_for(@saved_formation, remote: true) do |f| %>
      <div class="modal fade" id="mynewsaved_formation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"><strong>Add a New Formation</strong></h4>
          </div>
          
          <div class="modal-body">

            <div class="field">
              <%= f.label :title %><br>
              <%= f.text_field :title, class: "form-control saved_formation_title" %>
            </div>

          </div>  
          
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewsaved_formationclose">Close</button>
            <%= submit_tag "Create", class: "btn btn-custom1" %>
          </div>
        </div>
      </div>
      </div>
    <% end %>
  <!-- Modal -->

</div>

