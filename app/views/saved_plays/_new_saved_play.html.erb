<!-- Button trigger modal -->
  <button type="button" class="btn btn-custom1 btn-block" data-toggle="modal" data-target="#mynewsaved_play">
    Add a New Play
  </button>

<!-- Modal  create action -->
  <%= form_for(@saved_play, remote: true) do |f| %>
    <div class="modal fade" id="mynewsaved_play" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"><strong>Add a New Play</strong></h4>
          </div>
          
          <div class="modal-body">
            <div class="field">
              <%= f.label :title, "Play Name" %><br>
              <%= f.text_field :title, class: "form-control saved_play_title" %>
            </div>
          </div>
            
          <div class="modal-footer">
            <%= submit_tag "Add Play", class: "btn btn-custom1 btn-block" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<!-- Modal -->