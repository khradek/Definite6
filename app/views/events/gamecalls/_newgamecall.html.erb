<button type="button" class="btn btn-custom1 btn-block" data-toggle="modal" data-target="#mynewgamecall">
  Create New Game Call Sheet   
</button>

<!-- Modal - new game call sheet -->
<%= form_for [@event, @new_gamecall], remote: true do |f| %>
<div class="modal fade" id="mynewgamecall" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title center" id="myModalLabel"><strong>Create New Game Call Sheet</strong></h4>
      </div>
      <div class="modal-body">
      
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control gamecall-title" %>
      </div>
      <div class="form-group">
        <%= f.label :gamecall_template, "Template" %> 
        <div>
          <%= f.select(:gamecall_template, options_for_select([['Standard', 'Standard'], ['Custom', 'Custom']]), {}, {class: "form-control"}) %>
        </div>  
      </div>        
      <div class="field">
        <%= f.label :start_time, "Date" %><br>
        <%= f.datetime_select_install2 :start_time, class: "form-control gamecall-start-time" %>
      </div>  
      *Both fields must be completed in order for the game call sheet to be generated
      </div>    
      <div class="modal-footer">
        <button type="button" class="btn btn-custom1 btn-block" id="create-gamecall-button">Create New Call Sheet</button>
      </div>
    </div>
  </div>
</div>
<% end %>
<!-- Modal -->