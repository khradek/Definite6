<% @title = "Printer Friendly Playlist - Definite6.com"%>

<div id="idata1" class="hidden">
  [["<%= @event.title%>", "", ""],
  ["Hash", "Formation", "Play"],
  <% @plays[0..38].each do |play| %> 
    <% if play.hash_mark %> 
      ["<%= play.hash_mark %>", 
    <% else %>  
      [" ",
    <% end %>
    "<%= play.piece1 %>",  
    <% if play.piece2 %>
      "<%= play.piece2 %>"] 
    <% else %>  
      " "]
    <% end %> 
    <%= "," unless play == @event.plays.last || play == @event.plays[38] %>
  <% end %>]
</div>

