<button type="button" class="btn btn-custom1 btn-block" data-toggle="modal" data-target="#mynewplay">
  Add New Play    
</button>

<!-- Modal - new plays -->
<%= form_for [@event, @new_play], html: {data: {behavior: "has-saved-plays"}}, remote: true do |f| %>
<div class="modal fade list-modal" id="mynewplay" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title center" id="myModalLabel"><strong>Add a New Play</strong></h4>
      </div>
      <div class="modal-body">
        
        <div class="row">
          <div class="field col-md-6 padding-sm">
            <%= f.label :piece1, "Formation" %><br>
            <%= f.text_field :piece1, class: "form-control", id: "formation"%>
          </div>
          <div class="field col-md-6 padding-sm">
            <%= f.label :piece2, "Play" %><br>
            <%= f.text_field :piece2, class: "form-control", id: "play-call"%>
          </div>
        </div>

        <div class="saved-formations-and-plays">
          <div class="row">
            <div class="field col-md-6 padding-sm">
              <div class="form-group">
                <%= select_tag "saved_formations", options_for_select(SavedFormation.where(:user_id => current_user.id).map{ |sm| [sm.title, data: {body: sm.title}] }), prompt: "Saved formations", class: "form-control input-sm", id: "formation-dropdown", data: {behavior: "saved-formation-select"} %>
              </div>
            </div>
            <div class="field col-md-6 padding-sm">
              <div class="form-group">
                <%= select_tag "saved_plays", options_for_select(SavedPlay.where(:user_id => current_user.id).map{ |sm| [sm.title, data: {body: sm.title}] }), prompt: "Saved plays", class: "form-control input-sm", id: "play-dropdown", data: {behavior: "saved-play-select"} %>
              </div>
            </div>
          </div>
        </div>  

        <div class="row">
          <button type="button" class="btn btn-custom3 btn-sm show-saved-plays">Saved Formations & Plays</button>
        </div>
          
        <br>
        <hr>
          
        <div class="table">
          <div class="tr">
            <span class="td script-col1"><strong>Practice in Segment:</strong></span>
            <span class="td script-col2 center">1</span>
            <span class="td script-col3 center">2</span>
            <span class="td script-col3 center">3</span>
            <span class="td script-col3 center">4</span>
          </div>
          <div class="tr">
            <span class="script-col1 grey-font td"><i>For use with standard practice script</i></span>
            <span class="script-col2 td center"><%= f.check_box :period1, checked: "checked", class: "segment-check" %></span>
            <span class="script-col3 td center"><%= f.check_box :period2, checked: "checked", class: "segment-check" %></span>
            <span class="script-col3 td center"><%= f.check_box :period3, checked: "checked", class: "segment-check" %></span>
            <span class="script-col3 td center"><%= f.check_box :period4, checked: "checked", class: "segment-check" %></span>
          </div>
        </div>

        <hr>

        <button type="button" class="btn btn-custom1 btn-sm", id="assign-situation-button">Assign Situation Info</button>
    
        <div id="situations">
        <hr>
          <div class="form-group">
            <%= f.label :play_type, "Run/Pass" %> 
            <div>
              <%= f.select(:play_type, options_for_select([[' ', ' '], ['Run', 'Run'], ['Pass', 'Pass']]), {}, {class: "form-control"}) %>
            </div>  
          </div>

          <div class="form-group">
            <%= f.label :hash_mark, "Hash" %> 
            <div>
              <%= f.select(:hash_mark, options_for_select([[' ', ' '], ['Left', 'Left'], ['Right', 'Right']]), {}, {class: "form-control"}) %>
            </div>  
          </div>
          
          <br>

          <div class="table add-play-sit-table">
            <div class="tr">
              <span class="td"><strong>Situation:</strong></span>
              <span class="td center"></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name1 %></span>
              <span class="td center"><%= f.check_box :situation1 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name2 %></span>
              <span class="td center"><%= f.check_box :situation2 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name3 %></span>
              <span class="td center"><%= f.check_box :situation3 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name4 %></span>
              <span class="td center"><%= f.check_box :situation4 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name5 %></span>
              <span class="td center"><%= f.check_box :situation5 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name6 %></span>
              <span class="td center"><%= f.check_box :situation6 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name7 %></span>
              <span class="td center"><%= f.check_box :situation7 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name8 %></span>
              <span class="td center"><%= f.check_box :situation8 %></span>
            </div>
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name9 %></span>
              <span class="td center"><%= f.check_box :situation9 %></span>
            </div> 
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name10 %></span>
              <span class="td center"><%= f.check_box :situation10 %></span>
            </div> 
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name11 %></span>
              <span class="td center"><%= f.check_box :situation11 %></span>
            </div> 
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name12 %></span>
              <span class="td center"><%= f.check_box :situation12 %></span>
            </div> 
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name13 %></span>
              <span class="td center"><%= f.check_box :situation13 %></span>
            </div> 
            <div class="tr tr-hover">
              <span class="td"><%= current_user.s_name14 %></span>
              <span class="td center"><%= f.check_box :situation14 %></span>
            </div>                                    
          </div>

        </div>  


      </div>    
      <div class="modal-footer">
        <%= submit_tag "Add Play to Install", class: "btn btn-custom1 create-play btn-block" %>
      </div>
    </div>
  </div>
</div>
<% end %>
