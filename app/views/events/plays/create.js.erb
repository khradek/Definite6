//Hides the modal
$("#mynewplay").modal('hide');

//Clears/resets the form
$("#mynewplay .form-control").val('');
$(".saved-formations-and-plays").hide();
$(".segment-check").prop('checked', true);
$("#situations").hide()
$(".new-play-checkbox").prop( "checked", false );

//Adds new play to the install table
$("#plays-body").append('<%= j render @play %>');

//Adds new play to the Update Multiple modal
$("#multiples-body").append('<%= j render "multiple", multiple_play: @play %>');

//Adds play type and hash mark class to checkbox in the Update Multiple modal
$("#box-<%= @play.id %>").addClass('<%= @play.play_type %>')
$("#box-<%= @play.id %>").addClass('<%= @play.hash_mark %>')

//Adds new play to the Remove Multiple modal
$("#remove-multiple-body").append('<%= j render "remove_multiple", remove_play: @play %>');

//Updates the segment count td
$("#period1-count").html('<%= @period1_count %>');
$("#period2-count").html('<%= @period2_count %>');
$("#period3-count").html('<%= @period3_count %>');
$("#period4-count").html('<%= @period4_count %>');

//Highlights plays in install list if duplicate 
highlightDuplicateRows("#plays-body");





