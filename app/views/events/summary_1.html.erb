
<% @title = current_user.s_name1 + " Call Sheet Summary - Definite6.com" %>

<br>

<p class="large-text center">Call Sheet Summary</p>

<div class="thin-container">

  <br>
  <br>

  <div class="row row-no-gutter"> 
    <div class="col-xs-2"></div> 
    <div class="col-xs-8"><div class="center summary-border <%= current_user.sit1_color %>"><strong><%= current_user.s_name1 %></strong></div></div>
    <div class="col-xs-2"></div>
  </div>
  <div class="row row-no-gutter"> 
    <div class="col-xs-2"></div> 
    <div class="col-xs-4">        
      <% @plays.openers_left.each do |play| %>
        <div class="center summary-border white-bg" ><%= play.fullname %></div>
      <% end %> 
      <% (1..@openers_left_remain).each do |div| %>
        <div class="center summary-border white-bg trans">#</div>
      <% end %>
    </div>  
    <div class="col-xs-4">        
      <% @plays.openers_right.each do |play| %>
        <div class="center summary-border white-bg" ><%= play.fullname %></div>
      <% end %>
      <% (1..@openers_right_remain).each do |div| %>
        <div class="center summary-border white-bg trans">#</div>
      <% end %>
    <div class="col-xs-2"></div>
    </div>  
  </div>
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4 center"><strong>Spaces Remaining: <%= @openers_left_remain %></strong></div>
    <div class="col-xs-4 center"><strong>Spaces Remaining: <%= @openers_right_remain %></strong></div>
    <div class="col-xs-2"></div>
  </div>

  <%= link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i> Return to Install'.html_safe, 'javascript:history.go(-1);', class: "btn btn-custom3 btn-sm small-block" %>

  <hr class="light-smoke">

</div>






