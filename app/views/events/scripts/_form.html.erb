<%= form_for [@event, @script] do |f| %>
  <% if @script.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@script.errors.count, "error") %> prohibited this script from being saved:</h2>

      <ul>
      <% @script.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :sdata %><br>
    <%= f.text_area :sdata %>
  </div>
  <div class="field">
    <%= f.label :start_time, "Start Date" %><br>
    <%= f.datetime_select_no_time :start_time, class: "form-control event_start_time" %>
  </div>
  <div class="field">
    <%= f.label :end_time, "End Date" %><br>
    <%= f.datetime_select_no_time :end_time, class: "form-control event_end_time", id: "end-date" %>  
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
